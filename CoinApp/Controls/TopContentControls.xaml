<UserControl x:Class="CoinApp.Controls.TopContentControls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CoinApp.Controls"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="800">

    <Border>
        <Grid>
            <!--Search Textbox-->
            <Grid Width="300" HorizontalAlignment="Left" Height="50">
                <Border BorderBrush="#999fa8" BorderThickness="2" CornerRadius="8" Margin="40,0 -70 ,0">
                    <ScrollViewer x:Name="Part_ContentHost" Focusable="False" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden">
                        <TextBox x:Name="searchTextBox" Text="Search currency by name..." Foreground="#999fa8"
                        FontSize="12" Margin="6 5 50 7"
                        GotFocus="SearchTextBox_GotFocus" LostFocus="SearchTextBox_LostFocus" Background="Transparent" BorderThickness="0" Padding="15 10" Style="{StaticResource textboxSearch}" Width="271"/>
                    </ScrollViewer>
                </Border>
                <Button Style="{StaticResource topButton}" Margin="0 0 -58 0" VerticalAlignment="Center" HorizontalAlignment="Right">
                    <Icon:PackIconMaterial Kind="Magnify" Width="20" Height="20" 
                 Foreground="#999fa8" />
                </Button>
            </Grid>

            <!--Top settings buttons-->
                <Button Style="{StaticResource topButton}" Margin="0 0 0 2" HorizontalAlignment="Right" Click="Close_This_Window_Button_Click">
                    <TextBlock Text="X" FontSize="25" FontWeight="Bold"/>
                </Button>
                <Button Style="{StaticResource topButton}" Margin="0 0 40 0" HorizontalAlignment="Right">
                    <Icon:PackIconMaterial Kind="Cog" Width="35" Height="20"/>
                </Button>
            <Button Style="{StaticResource topButton}" Margin="0 0 80 0" HorizontalAlignment="Right">
                <Icon:PackIconMaterial Kind="ThemeLightDark" Width="35" Height="20"/>
            </Button>
        </Grid>
            
    </Border>

</UserControl>
